<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/teamCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="FRCKrawler"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamCount"
        android:layout_centerHorizontal="true"
        android:text="Scouting Application"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <Button
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:onClick="onCreditsClicked"
            android:text="About"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="Version 1.1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Scouting"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/join_button"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:onClick="joinCompetition"
                android:text="Join"
                android:textSize="18sp" />

            <Button
                android:id="@+id/continueScouting"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Continue"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Summary"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/sync_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:text="Sync"
                android:textSize="18sp" />

            <Button
                android:id="@+id/view_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:text="View"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Administer"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/super_button"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_weight="0.49"
                android:onClick="hostCompetition"
                android:text="Administer"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>