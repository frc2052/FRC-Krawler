<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true" >

                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.53"
                    android:text="Save" />

                <Button
                    android:id="@+id/remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:text="Remove Contact" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"
                    android:text="Cancel" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_below="@+id/titke"
                android:layout_centerHorizontal="true" >

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" >

                    <RelativeLayout
                        android:id="@+id/RelativeLayout02"
                        android:layout_width="wrap_content"
                        android:layout_height="410dp" >

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/nameVal"
                            android:layout_alignBottom="@+id/nameVal"
                            android:layout_alignParentLeft="true"
                            android:text="Name"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/address"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/nameVal"
                            android:ems="10"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/phone"
                            android:layout_alignBottom="@+id/phone"
                            android:layout_alignParentLeft="true"
                            android:text="Phone"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/address"
                            android:layout_alignBottom="@+id/address"
                            android:layout_alignParentLeft="true"
                            android:text="Address"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/address"
                            android:layout_toRightOf="@+id/textView4"
                            android:ems="10"
                            android:inputType="number" />

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/email"
                            android:layout_toRightOf="@+id/textView4"
                            android:ems="10" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/email"
                            android:layout_alignBottom="@+id/email"
                            android:layout_alignParentLeft="true"
                            android:text="Email"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <EditText
                            android:id="@+id/nameVal"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/email"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:ems="10" />

                    </RelativeLayout>
                </ScrollView>
            </RelativeLayout>

            <TextView
                android:id="@+id/titke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Edit Contact"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="24sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>