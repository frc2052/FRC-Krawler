<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tabRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <FrameLayout
                    android:id="@+id/progressFrame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                </FrameLayout>

                <Button
                    android:id="@+id/teamsSelectionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teams" />

                <Button
                    android:id="@+id/usersSelectionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Users" />

                <Button
                    android:id="@+id/gamesSelectionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Games" />

                <Button
                    android:id="@+id/bluetoothTabButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bluetooth" />

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/treeView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >

            <LinearLayout
                android:id="@+id/bottomLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" >

                <Button
                    android:id="@+id/addRobotButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Robot" />
            </LinearLayout>

            <TextView
                android:id="@+id/titke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Robots"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/titke" >

                <HorizontalScrollView
                    android:id="@+id/horizontalScroller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" >

                    <ScrollView
                        android:id="@+id/verticalScroller"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scrollbars="horizontal|vertical" >

                        <RelativeLayout
                            android:id="@+id/dataTableParent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" >

                            <TableLayout
                                android:id="@+id/dataTable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:dividerPadding="2dp" >
                            </TableLayout>
                        </RelativeLayout>
                    </ScrollView>
                </HorizontalScrollView>

            </RelativeLayout>

            <TextView
                android:id="@+id/numRobots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/treeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/scrollView1" >
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>