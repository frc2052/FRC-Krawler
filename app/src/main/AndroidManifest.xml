<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team2052.frckrawler">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!--Require Bluetooth-->
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true" />

    <application
        android:name=".core.FRCKrawler"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBase">

        <activity android:name=".core.activities.ListTester" />
        <activity android:name=".core.activities.MatchListActivity" />
        <activity android:name=".core.activities.TeamInfoActivity" />
        <activity android:name=".core.activities.RobotActivity" />
        <activity android:name=".core.activities.SummaryDataActivity" />
        <activity android:name=".core.activities.RobotsActivity" />
        <activity android:name=".core.activities.GameInfoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activities.HomeActivity" />
        </activity>
        <activity android:name="org.acra.CrashReportDialog" />
        <activity android:name=".core.activities.HomeActivity" />
        <activity android:name=".core.activities.EventInfoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activities.GameInfoActivity" />
        </activity>
        <activity android:name=".core.activities.SetupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".core.activities.ScoutActivity"></activity>

        <service android:name=".server.ServerService" />
    </application>

</manifest>