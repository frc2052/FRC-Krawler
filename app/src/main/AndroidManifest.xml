<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.team2052.frckrawler"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!--Require Bluetooth-->
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true" />

    <application
        android:name=".FRCKrawler"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBase">

        <activity android:name=".ListTester" />
        <activity android:name=".activity.MatchListActivity" />
        <activity android:name=".activity.TeamInfoActivity" />
        <activity android:name=".activity.robot.RobotActivity" />
        <activity android:name=".activity.data.SummaryMetricsActivity" />
        <activity android:name=".activity.data.SummaryDataActivity" />
        <activity android:name=".activity.robot.RobotsActivity" />
        <activity android:name=".activity.GameInfoActivity" />
        <activity android:name=".activity.EventInfoActivity" />
        <activity android:name="org.acra.CrashReportDialog" />
        <activity android:name=".activity.HomeActivity">
            <!-- <intent-filter>
                 <action android:name="android.intent.action.MAIN" />
                 <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>-->
        </activity>
        <activity
            android:name=".activity.MetricsActivity"
            android:windowSoftInputMode="adjustNothing">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.HomeActivity" />
        </activity>
        <activity
            android:name=".activity.EventsActivity"
            android:windowSoftInputMode="adjustNothing">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team2052.frckrawler.activity.HomeActivity" />
        </activity>
        <activity android:name=".activity.SetupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".bluetooth.server.ServerService" />
    </application>

</manifest>