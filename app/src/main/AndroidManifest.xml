<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.team2052.frckrawler"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        tools:replace="android:label"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:name=".FRCKrawler"
        android:theme="@style/AppBaseTheme">
        <activity
            android:name=".TeamsActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".UsersActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".GamesActivity" />
        <activity
            android:name=".activity.EventsActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".activity.dialog.AddTeamDialogActivity" />
        <activity android:name=".activity.dialog.EditTeamDialogActivity" />
        <activity android:name=".activity.dialog.EditUserDialogActivity" />
        <activity android:name=".activity.dialog.AddUserDialogActivity" />
        <activity android:name=".activity.dialog.AddGameDialogActivity" />
        <activity android:name=".activity.dialog.EditGameDialogActivity" />
        <activity
            android:name=".activity.RobotsActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".activity.MetricsActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".activity.ContactsActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".activity.dialog.AddCommentDialogActivity" />
        <activity android:name=".activity.dialog.AddContactDialogActivity" />
        <activity android:name=".activity.dialog.EditContactDialogActivity" />
        <activity android:name=".activity.dialog.AddEventDialogActivity" />
        <activity android:name=".activity.dialog.EditEventDialogActivity" />
        <activity android:name=".activity.dialog.AttendingTeamsDialogActivity" />
        <activity android:name=".activity.dialog.AddRobotDialogActivity" />
        <activity android:name=".activity.dialog.EditRobotDialogActivity" />
        <activity android:name=".activity.dialog.AddMetricDialogActivity" />
        <activity android:name=".activity.PicturesActivity" />
        <activity android:name=".activity.dialog.EditMetricDialogActivity" />
        <activity
            android:name=".activity.RawMatchDataActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".ServerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team2052.frckrawler.MainActivity" />
        </activity>
        <activity android:name=".activity.dialog.AddMatchDataDialogActivity" />
        <activity android:name=".activity.dialog.EditMatchDataDialogActivity" />
        <activity
            android:name=".activity.SummaryActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".activity.DriverDataActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".activity.dialog.QuerySortingDialogActivity" />
        <activity android:name=".activity.dialog.CommentDialogActivity" />
        <activity android:name=".activity.MainActivity">

        </activity>
        <activity
            android:name=".activity.ScoutTypeActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />
        <activity
            android:name=".activity.ScoutActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ListTester" />
        <activity android:name=".activity.ClientSummaryActivity" />
        <activity android:name=".activity.ScoutMatchDataActivity" />
        <activity android:name=".activity.ScoutEditMatchDataActivity" />
        <activity android:name=".activity.ListsActivity" />
        <activity android:name=".activity.dialog.AddListDialogActivity" />
        <activity android:name=".activity.dialog.ImportImageDialogActivity" />
        <activity
            android:name="com.ipaulpro.afilechooser.FileChooserActivity"
            android:icon="@drawable/ic_chooser"
            android:label="@string/chooser_label">
            <intent-filter>
                <action android:name="android.intent.action.GET_CONTENT" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />

                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        <activity android:name=".OptionsActivity" />
        <activity android:name=".activity.AddRobotAllActivity" />
        <activity android:name=".activity.dialog.ImportDialogActivity" />

        <service android:name=".bluetooth.ServerService" />

        <activity android:name=".activity.MatchScheduleActivity" />
        <activity android:name=".activity.dialog.AddMatchDialogActivity" />
        <activity android:name=".activity.dialog.ScoutScheduleDialogActivity" />
        <activity android:name=".activity.dialog.ExcelExportDialogActivity" />
        <activity android:name=".activity.dialog.DBBackupDialogActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activity.MainActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team2052.frckrawler.activity.MainActivity" />
        </activity>
        <activity android:name=".activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>