<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_121"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:title="@string/app_name" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Welcome to FRC Krawler! To get started, select from the options below"
        android:textAlignment="center"
        android:textSize="16sp" />

    <com.team2052.frckrawler.views.ExpandableCard
        android:id="@+id/remote_scout_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        custom:continueMessage="start scouting"
        custom:description="I want to connect to a server and scout"
        custom:title="Remote Scout" />

    <com.team2052.frckrawler.views.ExpandableCard
        android:id="@+id/server_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        custom:continueMessage="start server"
        custom:description="This device will be a server for remote scouts"
        custom:title="Server" />

    <com.team2052.frckrawler.views.ExpandableCard
        android:id="@+id/solo_scouting_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#0DFFFFFF"
        custom:cardBackgroundColor="@color/black_121"
        custom:continueMessage="start scouting"
        custom:description="I want to scout without connecting to other devices"
        custom:title="Solo Scouting" />

</LinearLayout>
