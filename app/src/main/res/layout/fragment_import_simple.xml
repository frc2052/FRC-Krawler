<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/import_year_spinner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/import_event_spinner"
        android:layout_below="@+id/import_year_spinner"
        android:layout_alignLeft="@+id/import_year_spinner"
        android:layout_alignStart="@+id/import_year_spinner"
        android:layout_marginTop="8dp" />

</RelativeLayout>