<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2052"
        android:id="@+id/list_item_team_number"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="KnightKrawler"
        android:id="@+id/list_item_team_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_item_team_number"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Location"
        android:id="@+id/list_item_team_location"
        android:layout_alignStart="@+id/list_item_team_name"
        android:layout_below="@+id/list_item_team_name"
        android:layout_toRightOf="@+id/list_item_team_number" />
</RelativeLayout>